{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "types": ["jest", "@types/jest"],
    "baseUrl": ".",
    "outDir": "lib"
  },
  "include": ["."],
  "exclude": ["lib/**/*", "lib-commonjs/**/*", "node_modules"]
}
